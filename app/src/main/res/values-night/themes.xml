<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BotanistGuide" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Общие настройки для обеих тем -->

    </style>

    <!-- Светлая тема -->
    <style name="Theme.BotanistGuide" parent="Base.Theme.BotanistGuide">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryContainer">@color/green_100</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/light_green_500</item>
        <item name="colorSecondaryContainer">@color/light_green_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">@color/green_50</item>
        <item name="colorOnSurface">@color/green_900</item>

        <!-- Настройки текста -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.BotanistGuide.Title.Large.Light</item>
    </style>

    <!-- Темная тема -->
    <style name="Theme.BotanistGuide.Dark" parent="Theme.BotanistGuide">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/green_300</item>
        <item name="colorPrimaryContainer">@color/green_800</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/light_green_200</item>
        <item name="colorSecondaryContainer">@color/light_green_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/green_900</item>
        <item name="colorSurfaceVariant">@color/green_800</item>
        <item name="colorOnSurface">@color/green_100</item>

        <!-- Настройки текста -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.BotanistGuide.Title.Large.Dark</item>
    </style>

    <!-- Стили текста для светлой темы -->
    <style name="TextAppearance.BotanistGuide.Title.Large.Light" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/green_900</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Стили текста для темной темы -->
    <style name="TextAppearance.BotanistGuide.Title.Large.Dark" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/green_100</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>